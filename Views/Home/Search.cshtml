@model List<Vehiculo>
@using MultasTransito.Models

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Multas</title>
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>
<body>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase"><strong>Resultado de multas</strong></h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>                    
                    <th><strong>Nit</strong></th>
                    <th><strong>Tipo de placa</strong></th>
                    <th><strong>Número de placa</strong></th>
                    <th><strong>Monto</strong></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                 {
                    <tr>
                        <td>@item.IdNit</td>
                        <td>@item.TipoPlaca</td>
                        <td>@item.IdPlaca</td>
                        <td>@item.NumeroPlaca</td>                        
                    </tr>
                 }
            </tbody>
        </table>
    </div>
</body>
</html>

