@using MultasTransito.Controllers;
@using MultasTransito.Models;
@using MultasTransito.Data;
@model IEnumerable<MultasTransito.Models.Municipios>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />    
    <title>@ViewData["Amilcar Bot"] - Amilcar Bot</title>
</head>
<body>
    <form method="post">
        <h2><strong>Elije la municipalidad a consultar</strong></h2>
        @for (var i = 0; i < @ViewBag.NombreMunisLenght; i++)
        {
            <input name="Index" id="checks" type="checkbox" value="@i" /> <strong>@ViewBag.NombreMunis[i]</strong> <br />
        }
        <div>
            <button type="button" class="btn btn-primary"><strong>Validar</strong></button>
        </div>
        <div class="radio radio-info">            
            <label class="custom-control-label" for="seleccioneTodos">
                <input type="radio" class="custom-control-input" id="seleccioneTodos">
                <strong>Seleccione todos</strong>
            </label>
        </div>
    </form>
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <table border="1" cellspacing="2" class="table" cellpadding="2" id="info-consulta">
                <thead class="thead-dark">
                    <tr>
                        <th>Municipalidad</th>
                        <th>Tipo de placa</th>
                        <th>Número de placa</th>
                        <th>Nit</th>
                    </tr>
                </thead>
                <tbody id="td">
                    @foreach (var vh in ViewData["DatosVehiculo"] as IList<Vehiculo>)
                    {
                        <tr>
                            <td scope="col" width="50px"></td>
                            <td scope="col" width="50px">@Html.DisplayFor(model => model.)</td>
                            <td scope="col" width="100px">@vh.TipoPlaca</td>
                            <td scope="col" width="100px">@vh.IdPlaca</td>
                            <td width="50">
                                <input type="button" class="btn btn-success btn-lg btn-block" 
                                       id="Buscar" value="Buscar....">
                            </td>
                        </tr>
                    }
                </tbody>
                @*@foreach (var vh in ViewData["DatosVehiculo"] as IList<Vehiculo>)
        {
            <tr>@vh.IdNit</tr>
            <tr>@vh.TipoPlaca</tr>
            <tr>@vh.IdPlaca</tr>
        }*@
                <tbody>
                </tbody>
            </table>
        </div>
    </form>   
</body>
</html>
