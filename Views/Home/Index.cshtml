            <img src="@Url.IsLocalUrl("wwwroot/images/BDG.png")" />
        </div>
        <form method="post">
            <h2>Elije la municipalidad a consultar</h2>          
            @for (var i = 0; i < @ViewBag.NombreMunisLenght; i++)
