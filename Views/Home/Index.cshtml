            }            
            <button>Validar</button>
            <input type="radio" value="Seleccione todos"/>
        </form>
        <div>
            <table border="1" cellspacing="4" cellpadding="4">
                <thead>
                    <tr>
                        <th width="150">  Municipalidad  </th>
                        <th width="100"> TipoPlaca </th>
                        <th width="100"> Placa </th>
                        <th width="100"> Nit </th>
                        <th> Consultar </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><input type="button" id="todos" value="Consultar"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </body>
</html>
