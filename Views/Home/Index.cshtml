@using MultasTransito.Controllers;
@model Municipios;

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Amilcar Bot"] - Amilcar Bot</title>
    </head>
    <body>
